pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    docker.build("minaz0509/my-jenkins-app:1")
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-cred') {
                            docker.image("minaz0509/my-jenkins-app:1").push()
                        }
                    }
                }
            }
        }
    }
}
